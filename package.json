{
  "name": "setup-sdl2-frameworks",
  "version": "1.0.0",
  "private": true,
  "description": "Set up SDL2 frameworks in GitHub Actions macOS runner.",
  "main": "lib/main.js",
  "scripts": {
    "build": "ncc build -o dist/setup --license licenses.txt src/main.ts",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "all": "npm run format && npm run build && npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BrettDong/setup-sdl2-frameworks.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup",
    "sdl2",
    "macos"
  ],
  "author": "BrettDong",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "@actions/io": "^1.1.3",
    "@actions/tool-cache": "^2.0.1",
    "dmg": "^0.1.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.19.0",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^9.19.0",
    "eslint-plugin-github": "^5.1.5",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^27.2.5",
    "js-yaml": "^4.1.0",
    "prettier": "^3.4.2",
    "stylelint-prettier": "^5.0.2",
    "ts-jest": "^27.1.2",
    "typescript": "^4.4.4"
  }
}
