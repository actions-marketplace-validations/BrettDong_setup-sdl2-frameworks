{
  "name": "setup-sdl2-frameworks",
  "version": "1.0.0",
  "private": true,
  "description": "Set up SDL2 frameworks in GitHub Actions macOS runner.",
  "main": "lib/main.js",
  "scripts": {
    "build": "ncc build -o dist/setup --license licenses.txt src/main.ts",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "all": "npm run format && npm run build && npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BrettDong/setup-sdl2-frameworks.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup",
    "sdl2",
    "macos"
  ],
  "author": "BrettDong",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^5.1.1",
    "@actions/io": "^1.1.3",
    "@actions/tool-cache": "^2.0.1",
    "dmg": "^0.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.4.1",
    "@typescript-eslint/parser": "^5.61.0",
    "@vercel/ncc": "^0.36.1",
    "eslint": "^8.45.0",
    "eslint-plugin-github": "^4.8.0",
    "eslint-plugin-jest": "^27.2.3",
    "jest": "^27.2.5",
    "js-yaml": "^4.1.0",
    "prettier": "2.8.8",
    "ts-jest": "^27.1.2",
    "typescript": "^4.4.4"
  }
}
