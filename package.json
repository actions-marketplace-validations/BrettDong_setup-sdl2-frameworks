{
  "name": "setup-sdl2-frameworks",
  "version": "1.0.0",
  "private": true,
  "description": "Set up SDL2 frameworks in GitHub Actions macOS runner.",
  "main": "lib/main.js",
  "scripts": {
    "build": "ncc build -o dist/setup --license licenses.txt src/main.ts",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "all": "npm run format && npm run build && npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BrettDong/setup-sdl2-frameworks.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup",
    "sdl2",
    "macos"
  ],
  "author": "BrettDong",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^2.0.2",
    "@actions/github": "^7.0.0",
    "@actions/io": "^2.0.0",
    "@actions/tool-cache": "^3.0.0",
    "dmg": "^0.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.35.0",
    "@types/node": "^25.0.10",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "@vercel/ncc": "^0.38.4",
    "eslint": "^9.39.2",
    "eslint-plugin-github": "^6.0.0",
    "eslint-plugin-jest": "^29.12.1",
    "eslint-plugin-prettier": "^5.5.5",
    "globals": "^17.0.0",
    "jest": "^30.2.0",
    "js-yaml": "^4.1.1",
    "prettier": "^3.8.0",
    "stylelint-prettier": "^5.0.3",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  }
}
