{
  "name": "setup-sdl2-frameworks",
  "version": "1.0.0",
  "private": true,
  "description": "Set up SDL2 frameworks in GitHub Actions macOS runner.",
  "main": "lib/main.js",
  "scripts": {
    "build": "ncc build -o dist/setup --license licenses.txt src/main.ts",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "all": "npm run format && npm run build && npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BrettDong/setup-sdl2-frameworks.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup",
    "sdl2",
    "macos"
  ],
  "author": "BrettDong",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.0",
    "@actions/io": "^1.1.3",
    "@actions/tool-cache": "^2.0.2",
    "dmg": "^0.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.33.0",
    "@types/node": "^24.4.0",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vercel/ncc": "^0.38.3",
    "eslint": "^9.34.0",
    "eslint-plugin-github": "^6.0.0",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.3.0",
    "jest": "^30.1.3",
    "js-yaml": "^4.1.0",
    "prettier": "^3.6.2",
    "stylelint-prettier": "^5.0.3",
    "ts-jest": "^29.4.1",
    "typescript": "^5.9.2"
  }
}
